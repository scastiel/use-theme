{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["react", "jest"],
    "skipLibCheck": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/__tests__/**/*"]
}
